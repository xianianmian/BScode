page {
  background: #ffffff;
  position: relative;
}

.tips {
  position: fixed;
  top: 75px;
  z-index: 3;
}

.tips .tipsbtn {
  background-color: rgb(245, 244, 239);
}

.search{
  padding: 5px 30px;
}
.search .input{
  flex:1;
  display: flex;
  flex-direction: row;
}
.search .input .wxinput{
background-color: #efe;
  color: red;
  height: 30px;
  width: 100%;
  border:1px solid black;
  border-radius: 10px;
}
.search .img image{
  width: 34px;
  height: 34px;
}

.reset{
  padding-left: 20px;
  font-size: 15px;
}
.resetbtn{
  padding: 10px;
  font-size: 15px;
  border:1px solid #B1C941;
  width: 100px;
  text-align: center;
  font-size: 20px;
}

.filter{
  margin: 10px 0;
  display: flex;
  flex-direction: row;
}
.filter image{
  height: 20px;
  width: 20px;
  transform: translateY(5px);
}
.filter .address , .filter .zhonglei{
  flex: 1;
  font-size: 16px;
  text-align: center;
}
.popuptitle{
  padding: 20px;
  font-size: 20px;
  color: red;
  text-align: center;
}
.filterlist{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;

}
.list-itema{
  width: 100px;
  border-radius: 10px;
  height: 40px;
  line-height: 40px;
  text-align: center;
}
.listcontent{
  margin: 10px;
}
.listcontent .list-iteml{
  width: 100px;
  border:1px solid rgb(221, 17, 17);
  border-radius: 10px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: red;
}

/*   购物车布局 */
.wrapper {
  padding-bottom: 200rpx;
}

.list {
  background: rgb(241, 245, 241);
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin: 10rpx 0rpx;
  border-radius: 20rpx;
  min-height: 250rpx;

}

/* 左侧内容 */
.item {
  display: flex;
  align-items: center;
  width: 100%;
  font-size: 14px;
}

.circle {
  padding-right: 10rpx;
}

.img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10px;
}

.content {
  position: relative;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 460rpx;
  display: flex;
  flex-direction: column;
}

.shang {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: -10px;
  font-size: 20px;
}
.shang .tlove{
  width: 60px;
  text-align: right;
}
.shang .tlove image{
  height: 30px;
  width: 30px;
}

.tags{
  padding:6px 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.tags view{
  margin-right:10px ;
}


