.xia {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 40px;
}

.xia .price text {
  color: red;
  font-size: 18px;
}
.xia .stars-box {
  margin-right: 10rpx;
  display: flex;
}

.xia .stars-box image {
  width: 40rpx;
  height: 40rpx;
}

.xia .btns {
  display: inherit;

}

.xia .btns view {
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  width: 40rpx;
  padding: 0;
  margin: 0 4px;
  background-color: rgb(212, 230, 230);
}

.xia view.value {
  width: 60rpx;
  text-align: center;
}

/* 结算 */

.bottom {
  font-size: 14px;
  position: fixed;
  background: #fff;
  display: flex;
  bottom: 0;
  left: 0;
  right: 0;
  align-items: center;
  justify-content: space-between;
}

.all {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  height: 100%;
}
