/* pages/tourism/tourism.wxss */
page {
  background: #f7f7f7;
  position: relative;
}

.banner {
  position: relative;
  height: 338rpx;
}

.banner swiper {
  height: 338rpx;
  width: 100%;
}

.banner image {
  height: 338rpx;
  width: 100%;
}

.banner .swiper-item {
  position: relative;
}

.banner .desc {
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 10rpx;
  font-size: 24rpx;
  text-align: center;
  /* 溢出隐藏 */
}

.banner-current {
  position: absolute;
  bottom: 12rpx;
  color: #fff;
  font-size: 26rpx;
  z-index: 1;
}

