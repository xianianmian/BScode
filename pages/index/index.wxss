/* pages/tourism/tourism.wxss */
page {
  background: #ebeaea;
  position: relative;
}

.tips {
  position: fixed;
  top: 75px;
  z-index: 3;
}

.tips .tipsbtn {
  background-color: rgb(245, 244, 239);
}

.banner {
  position: relative;
  height: 338rpx;
}

.banner swiper {
  height: 338rpx;
  width: 100%;
}

.banner image {
  height: 338rpx;
  width: 100%;
}

.banner .swiper-item {
  position: relative;
}

.banner .desc {
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 10rpx;
  font-size: 24rpx;
  text-align: center;
  /* 溢出隐藏 */
}

.banner-current {
  position: absolute;
  bottom: 12rpx;
  color: #fff;
  font-size: 26rpx;
  z-index: 1;
}
.move{
  padding: 5px 10px 20px 10px;
  text-align: right;
  color: gray;
  font-size: 18px;
  background-color: #fff;
  margin-bottom: 10px;
}

.title {
 display: flex;
 align-items: center;
 justify-content: center;
 background-color: #fff;
}
.title image{
  width: 60%;
  height: 50px;
}

.jingdian{
  margin:10px;
  background-color: #fff;
  border-radius: 5px;
  padding: 5px;
  display: flex;
  flex-direction: row;
  font-size: 14px;
  box-shadow: 1px 1rpx rgb(220, 221, 215);
}
.jingdian .left image {
  height: 240rpx;
  width: 240rpx;
  border-radius: 10px;
}
.jingdian .right{
  padding-left: 10px;
  width: 100%;
}
.jingdian .jdname{
  width: 100%;
  font-size: 20px;
  text-align: center;
}
.jingdian .jddesc{
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3; 
    -webkit-box-orient: vertical; 
    color: gray;
    font-size: 18px;
    text-indent: 20px;
}
.shangping{
  margin:10px;
  background-color: #fff;
  border-radius: 5px;
  padding: 5px;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  box-shadow: 1px 1rpx rgb(220, 221, 215);
}

.shangping image{
  height: 220px;
  width: 90%;
  border-radius: 5%;
}
.shangping .imgTitle{
  padding: 8px 0;
  text-align: center; 
  font-size: 20px;
}
.shangping .info{
  display: flex;
  justify-content: space-between;
}
.shangping .price{
  padding: 8px 0;
  font-size: 20px;
  color: red;
}