/* pages/productdetail/productdetail.wxss */
.detail-container {
  font-size: 30rpx;
}
.detail-container image {
  width: 100%;
}
.detail-container .name,
.detail-container .price,
.detail-container .address {
  font-size: 40rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
}
.detail-container .name text,
.detail-container .price text,
.detail-container .address text {
  color: red;
}
.detail-container .pingjia {
  display: flex;
  margin-top: 10rpx;
  padding-left: 10rpx;
}
.detail-container .pingjia .love {
  font-size: 40rpx;
  color: red;
  margin-right: 200rpx;
}
.detail-container .pingjia .xing .stars-box text {
  font-size: 40rpx;
  color: yellowgreen;
}
.detail-container .pingjia .xing .stars-box image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 2px;
}
.detail-container .detail {
  margin-top: 10rpx;
  padding-left: 10rpx;
  min-height: 400rpx;
}
.detail-container .detail .info {
  text-indent: 20rpx;
}


/* 购物车 */
.shoping{
  position: fixed;
  left: 0;
  right: 0;
  bottom:0;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding: 20rpx;
  color: #fff;
  background: #fff;
  font-size: 28rpx;
}
.shop-img{
  flex: 1;
  text-align: right;
}
.shop-img image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.go-shop{
  width: 160rpx;
  text-align: center;
  background: red;
  padding: 16rpx 0;
  border-radius: 10rpx 0 0 10rpx;
}
.buy-now{
  width: 160rpx;
  background: pink;
  padding: 16rpx 0;
  text-align: center;
  border-radius: 0 10rpx  10rpx 0;
}
