/* pages/setting/setting.wxss */
.setting-page{
	padding:20px;
}
.btn-item{
	margin:10px 0;
}
.address-setting ,.recommend-setting ,.userinfo-setting{
	background-color: aquamarine;
	color: red;
}

.modleContent{
  width: 200px;
  height: 200px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.modleContent .btns{
  width: 100%;
  padding: 4px 0;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
  background-color: #fff;
}
 
.avatar {
  display: block;
  width: 56px;
  height: 56px;
}
 
.container {
  display: flex;
}
.row{
   border-top: 1px solid #ccc;
   border-bottom: 1px solid #ccc;
   display: flex;
   align-items: center;
   height: 80rpx;
   padding-left: 20rpx;
}
.text1{
    flex: 2;
}
.weui-input{
    flex: 6;
}