/* pages/productdetail/productdetail.wxss */
.detail-container {
  font-size: 30rpx;
}
.head image {
  width: 100%;
}
.info{
  padding: 10px;
}
.info .name,
.info .price,
.info .address {
  font-size: 40rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
}
.info .name text,
.info .price text,
.info .address text {
  color: red;
}
.detail view:nth-child(1){
  font-size: 40rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
}
.detail .tinfo{
  color: red;
  text-indent: 20px;
}
.pingjia{
  text-align: center;
}
.pingjiacontent{
  width: 100%;
}
.pingjiacontent .tlove {
  text-align: center;
  font-size: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pingjiacontent .tlove image{
  height: 50px;
  width: 50px;
}
.xing{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}
.xing .stars-box{
  display: flex;
}
.xing .stars-box image{
  height: 40px;
  width: 40px;
}

/* 购物车 */
.shoping{
  position: fixed;
  bottom: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  flex-wrap: wrap;
}
.shoping .pingjia{
  width: 80%;
  padding:10px;
  text-align: center;
  background-color: rgb(95, 110, 243);
  color: #fff;
  border-radius: 10px;
  font-size: 28rpx;
}
.shoping .buy{
  width: 80%;
  padding:10px;
  text-align: center;
  background-color: red;
  color: #fff;
  border-radius: 10px;
  font-size: 28rpx;
}
